<%= form_for @remember_note, :html => { :class => "remember_note" } do |f| %>

  <% if @remember_note.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@remember_note.errors.count, "error") %> prohibited this remember_note from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @remember_note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
      <%= f.text_field :title, :class => 'form-control' %>
    <%=f.error_span(:title) %>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_field :description, :class => 'form-control' %>
    <%=f.error_span(:description) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                remember_notes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
